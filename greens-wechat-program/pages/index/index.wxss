
.root {
    width: 100%;
    height: 100%;
}

.sidebar {
    width: auto;
    height: 100%;
    background: #F6F8F9;
    position: fixed;
}

.content {
    position: fixed;
    left: 73px;
    top: 0;
    right: 0;
    bottom: 0;
    width: auto;
}

/** 类目 */
/** ===================================== */
.category-item {
    border-left: 3px solid transparent;
    border-top: 1px solid #eee;
}

.category-item:first-child {
    border-top-width: 0px;
}

.category-item .icon {
    width: 40px;
    height: 40px;
    padding: 15px;
}

.category-item.active {
    border-left-color: #8AC007;
    background-color: white;
    border-right-width: 0px;
}

/** 商品项目 */
/** ===================================== */
.commodity-item {
    display: flex;
    flex-direction: row;
    margin-left: 10px;
    padding: 10px 10px 10px 0;
    box-sizing: border-box;
    border-top: 1px solid #eee;
}

.commodity-item:first-child {
    border-top-width: 0px;
}

.commodity-item image {
    width: 60px;
    max-height: 50px;
}

.commodity-item .commodity-body {
    flex: 1;
    margin-left: 10px;
    position: relative;
}

.commodity-item .commodity-name {
    font-size: 16px;
    font-weight: bold;
}

.commodity-item .commodity-description {
    color: #888;
    font-size: 12px;
    margin: 4px 0;
    line-height: 14px;
}

.commodity-item .commodity-salePrice {
    color: #ff6600;
    font-weight: bold;
}

.commodity-operator {
    position: absolute;
    right: 0px;
    bottom: 0px;
}

.commodity-operator .operator {
    display: inline-block;
    border: 1px solid #eee;
    text-align: center;
    margin: 0 10px;
    width: 20px;
    height: 20px;
    padding:0px;
    line-height: 24px;
    border-radius: 50%;
}
.upperAmount {
    color: #fff;
    background: #8AC007;
}