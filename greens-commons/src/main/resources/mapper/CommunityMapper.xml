<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ytwman.greens.commons.repo.CommunityMapper">

    <select id="findById" resultType="com.ytwman.greens.commons.entity.CommunityEntity">
        SELECT  * FROM base_community WHERE is_delete = 0 AND id = #{id} limit 1;
    </select>

    <select id="findAll" resultType="com.ytwman.greens.commons.entity.CommunityEntity">
        SELECT * FROM  base_community
        ORDER BY id DESC;
    </select>
</mapper>