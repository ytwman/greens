<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- 指定 JDBC 驱动 jar 路径 -->
    <classPathEntry
            location="/Users/ytwman/.m2/repository/mysql/mysql-connector-java/5.1.34/mysql-connector-java-5.1.34.jar"/>

    <!-- 创建生成器配置 -->
    <context id="MySQLTables" targetRuntime="MyBatis3">
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.CaseInsensitiveLikePlugin"/>

        <commentGenerator>
            <!-- 这个元素用来指定生成的注释中是否包含生成的日期。 -->
            <!-- <property name="suppressDate" value="true"/> -->
            <!-- 这个属性用来指定MBG生成的代码中是否包含任何注释。 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 设置驱动 JDBC 连接 -->
        <jdbcConnection
                driverClass="com.mysql.jdbc.Driver"
                connectionURL="jdbc:mysql://localhost:3306/greens"
                userId="root"
                password="xiaoshuai"/>

        <!-- Java 类型解析器 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- Model 和 Example 位置 -->
        <javaModelGenerator targetPackage="com.ytwman.greens.commons.entity"
                            targetProject="/Users/ytwman/Documents/workspace/greens/greens-commons/src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- Mapper.xml 位置文件 -->
        <sqlMapGenerator targetPackage="mapper.base"
                            targetProject="/Users/ytwman/Documents/workspace/greens/greens-commons/src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- Mapper 类的位置 -->
        <javaClientGenerator targetPackage="com.ytwman.greens.commons.entity.mapper.base"
                             targetProject="/Users/ytwman/Documents/workspace/greens/greens-commons/src/main/java"
                             type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 如果设置为true,那么MBG会使用从数据库元数据获取的列名作为生成的实体对象的属性。 如果为false(默认值)，MGB将会尝试将返回的名称转换为驼峰形式。 -->

    </context>
</generatorConfiguration>